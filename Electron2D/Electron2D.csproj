      <PackageReference Include="SDL3-CS.Native.Mixer" Version="2.8.1" />
      <PackageReference Include="SDL3-CS.Native.TTF" Version="3.1.2" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="\"/>
        <None Include="../LICENSE" Pack="true" PackagePath="\"/>
        <None Include="../CODE_OF_CONDUCT.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
